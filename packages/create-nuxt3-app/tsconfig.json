{
  "exclude": [
    "coverage",
    "dist",
    "node_modules",
    "src/plop-templates"
  ],
  "include": [
    "src/plops"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "module": "esnext",
    "lib": [
      "ESNext"
    ],
    "outDir": "dist",
    "esModuleInterop": true
  }
}
